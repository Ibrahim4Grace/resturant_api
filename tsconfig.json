{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "ES2021",
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "src/types"]
    },
    "types": ["node"],
    "include": ["src/**/*", "config"],
    "exclude": ["node_modules", "dist", "**/*spec.ts"]
}
