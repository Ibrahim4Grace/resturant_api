{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@/resources/*": ["resources/*"],
            "@/utils*": ["utils/*"],
            "@/middlewares*": ["middlewares/*"],
            "@/config*": ["config/*"],
            "@/email-services*": ["email-services/*"]
        },
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*spec.ts"]
}
